package Giris;
import java.util.Scanner;
public class ciftvedordunkati {
    public static void main(String[] args) {
        int n;
        int total = 0;

        do {
            System.out.print("Bir sayÄ± giriniz: ");
            Scanner scan = new Scanner(System.in);
            n = scan.nextInt();

            if (n % 2 == 0 && n % 4 == 0){
                total += n;
            }
        }while (n % 2 == 0);

        System.out.println(total);
    }
}
