package Giris;
import  java.util.Scanner;

public class ManavaKasaProgrami {
    public static void main(String[] args) {
        double elmaKg = 3.67, elma, armutKg = 2.14, armut, domatesKg = 1.11,
                domates, muzKg = 0.95, muz, patlicanKg = 5.00, patlican, toplam = 0;

        System.out.print("Armut Kaç Kilo? : ");
        Scanner input = new Scanner(System.in);
        armut = input.nextDouble();
        toplam += armutKg * armut;

        System.out.print("Elma Kaç Kilo? : ");
        Scanner input2 = new Scanner(System.in);
        elma = input.nextDouble();
        toplam +=  elmaKg * elma;

        System.out.print("Domates Kaç Kilo? : ");
        Scanner input3 = new Scanner(System.in);
        domates = input.nextDouble();
         toplam += domatesKg * domates;

        System.out.print("Muz Kaç Kilo? : ");
        Scanner input4 = new Scanner(System.in);
        muz = input.nextDouble();
        toplam += muzKg * muz;

        System.out.print("Muz Kaç Kilo? : ");
        Scanner input5 = new Scanner(System.in);
        patlican = input.nextDouble();
        toplam += patlicanKg * patlican;

        System.out.print("Toplam Ödemeniz: " + toplam + "Tl'dir.");

    }
}
